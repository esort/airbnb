 <div class="row">
   
<div class="col-md-3">
     <ul class="sidebar-list">
          <li class="sidebar-item"> 
               <%= link_to 'Modifier mon profil', edit_user_registration_path, class: 'sidebar-link active' %>
          </li> 
     </ul> 
 <br> 
 <%= link_to 'Voir mon profil', user_path(current_user.id), class: 'btn btn-default wide' %>
 </div>
   
<div class="col-md-7 text-center"> 
       <div class="panel  panel-default"> 
         <div class="panel-heading">Mon profil</div>
                <div class="panel-body"> 
                    <div class="container">
  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
 
 <%= render 'shared/devise_errors' %>
  <div class="form-group">
    <%= f.label :fullname %><br />
    <%= f.text_field :fullname, autofocus: true, autocomplete: "off", class: "form-control", placeholder:"Votre prénom, nom"  %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Votre email"  %>
  </div>
   
  <div class="row"> 
      <div class="col-md-4"> 
              <div class="form-group"> 
                   <span class="btn btn-default btn-file">Upload ma photo 
                        <%= f.file_field :avatar %>
                   </span> 
               </div> 
        </div>   
 </div>
                      
<div class="form-group">
 <%= f.text_field :phone_number, class: "form-control", placeholder: "Numéro de téléphone" %>
 </div>
<div class="form-group"> 
 <%= f.text_area :description, rows:5, col:25, class: "form-control", placeholder: "Ma description" %>
 </div>                      
                      
                      
  <div class="form-group">
    <%= f.label :password %> <i>(laisser vide, si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Votre Mot de Passe si vous voulez le changer" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder:"Votre Mot de Passe" %>
  </div>


  <div class="actions">
    <%= f.submit "Enregistrer", class: "btn btn-primary" %>
  </div>
  <br />
<% end %>
                       </div> </div> 
  </div>
   </div>
