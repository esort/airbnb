 <div class="row">
<div class="col-md-4 col-md-offset-4 text-center">
  
<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :fullname %><br />
    <%= f.text_field :fullname, autofocus: true, autocomplete: "off", class: "form-control", placeholder:"Votre prénom, nom"  %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Adresse email"  %>
  </div>
 
  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"Créer un Mot de Passe" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder:"Confirmer le Mot de Passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Inscription", class: "btn btn-primary" %>
  </div>
<% end %>
  </div>
     </div>
